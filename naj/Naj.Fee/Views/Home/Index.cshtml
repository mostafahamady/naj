@section PageScripts
{
    <script src="~/scripts/Home.Index.js" type="text/javascript"></script>
}
<!-- BEGIN PAGE HEADER-->
@{
    Html.RenderPartial("_PageHeader", ViewData);
}
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <div class="col-md-12 col-xs-12 col-sm-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cursor font-dark hide"></i>
                    <span class="caption-subject font-dark bold uppercase">مؤشر طلبات الرخص المهنية</span>
                </div>
                <div class="tools">
                    <div id="dashboard-report-range" class="pull-right tooltips btn btn-fit-height blue" data-placement="top" data-original-title="أختر الفترة التاريخية">
                        <i class="icon-calendar"></i>&nbsp;
                        <span class="thin uppercase hidden-xs"></span>&nbsp;
                        <i class="fa fa-angle-down"></i>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="easy-pie-chart">
                            <a class="title" href="javascript:;">
                                <i class="fa fa-circle-thin"></i>
                                جديد
                            </a>
                            <div class="number new" data-percent="15">
                                <span style="margin-left:50px;">%15</span>
                            </div>
                        </div>
                    </div>
                    <div class="margin-bottom-10 visible-sm"> </div>
                    <div class="col-md-3">
                        <div class="easy-pie-chart">
                            <a class="title" href="javascript:;">
                                <i class="fa fa-ban"></i>
                                مرفوض
                            </a>
                            <div class="number reject" data-percent="5">
                                <span style="margin-left:50px;">%5</span>
                            </div>
                        </div>
                    </div>
                    <div class="margin-bottom-10 visible-sm"> </div>
                    <div class="col-md-3">
                        <div class="easy-pie-chart">
                            <a class="title" href="javascript:;">
                                <i class="fa fa-cog"></i>
                                تحت الأجراء
                            </a>
                            <div class="number con" data-percent="55">
                                <span style="margin-left:50px;">%50</span>
                            </div>
                        </div>
                    </div>
                    <div class="margin-bottom-10 visible-sm"> </div>
                    <div class="col-md-3">
                        <div class="easy-pie-chart">
                            <a class="title" href="javascript:;">
                                <i class="fa fa-check-circle"></i>
                                مصدر
                            </a>
                            <div class="number finish" data-percent="30">
                                <span style="margin-left:50px;">%30</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->