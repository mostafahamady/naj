
@if (ViewData.ContainsKey("Page") && ViewData["Page"] != null)
{
    Naj.Data.Entities.Page Page = (Naj.Data.Entities.Page)ViewData["Page"];
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/">@Page.Menu.Module.Title</a>
            </li>
            <li>
                <i class="fa fa-chevron-left"></i>
                <a href="#">@Page.Menu.Title</a>
            </li>
            <li>
                <i class="fa fa-chevron-left"></i>
                <span>@Page.Title</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        @Page.Title
        <small>@Page.Brief</small>
    </h1>
    <!-- END PAGE TITLE-->
}
